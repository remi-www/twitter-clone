<%= simple_form_for @tweet, remote: true, data: { controller: "tweet-form" } do |f| %>
  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
        <% tweet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div>
      <%= f.input :body, class: 'form-control', placeholder: "Tweet your thoughts", input_html: { data: { tweet_form_target: 'body', action: "input->tweet-form#update" } } %>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <span data-tweet-form-target="characterCount"></span>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
